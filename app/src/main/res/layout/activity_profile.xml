<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="25sp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Biodata"/>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang! Masukkan data diri kamu." />

    <TextView
        android:layout_marginTop="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_marginTop="5sp"
        android:paddingHorizontal="10sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rectangle_input"/>

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umur"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/ageEditText"
        android:layout_marginTop="5sp"
        android:paddingHorizontal="10sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rectangle_input"/>

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/addressEditText"
        android:layout_marginTop="5sp"
        android:paddingHorizontal="10sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rectangle_input"/>

    <CheckBox android:id="@+id/checkbox_meat"
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setuju untuk membagikan data Anda" />

    <Button
        android:id="@+id/continueButton"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rounded_button"
        android:text="Continue"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10sp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or continue with" />


        <View
            android:layout_marginLeft="10sp"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <Button
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/rounded_grey_button"
        android:text="Guest Account"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>