<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/nameTextView"
        android:paddingTop="60sp"
        android:paddingHorizontal="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@android:color/holo_orange_light" />

    <LinearLayout
        android:background="@android:color/holo_orange_light"
        android:paddingHorizontal="25sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="20sp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ageTextView"
            android:layout_marginRight="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="1sp"
            android:layout_height="fill_parent"
            android:background="@color/black" />
        <TextView
            android:id="@+id/addressTextView"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <ListView
        android:id="@+id/todoListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10sp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End of List" />


        <View
            android:layout_marginLeft="10sp"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <TextView
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah List Baru"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="true"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/newTodoEditText"
            android:paddingHorizontal="10sp"
            android:layout_width="280sp"
            android:layout_height="50sp"
            android:background="@drawable/rectangle_input"/>
        <Button
            android:id="@+id/newTodoButton"
            android:layout_width="wrap_content"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_height="60sp"
            android:text="Add"/>
    </LinearLayout>

</LinearLayout>